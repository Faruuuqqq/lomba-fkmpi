{
  "name": "mitra-ai-server",
  "version": "1.0.0",
  "description": "MITRA-AI Backend API",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "npx prisma generate",
    "build": "npx prisma generate && nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:security": "jest src/auth/auth.controller.spec.ts src/security-integration.spec.ts --testPathPattern=security",
    "test:security:sql-injection": "jest --testNamePattern='SQL injection'",
    "test:security:xss": "jest --testNamePattern='XSS'",
    "test:security:common-passwords": "jest --testNamePattern='common password'",
    "test:security:email-validation": "jest --testNamePattern='email'",
    "test:security:password-complexity": "jest --testNamePattern='password'",
    "test:security:input-sanitization": "jest --testNamePattern='sanitization'",
    "test:security:rate-limit-ip": "jest --testNamePattern='Rate Limiting.*IP'",
    "test:security:rate-limit-endpoint": "jest --testNamePattern='Rate Limiting.*endpoint'",
    "test:security:rate-limit-headers": "jest --testNamePattern='rate limit headers'",
    "test:security:failed-attempts": "jest --testNamePattern='failed.*attempt'",
    "test:security:account-lockout": "jest --testNamePattern='account.*lockout'",
    "test:security:lockout-duration": "jest --testNamePattern='lockout.*duration'",
    "test:security:recaptcha": "jest --testNamePattern='reCAPTCHA'",
    "test:security:user-agent": "jest --testNamePattern='user.*agent'",
    "test:security:risk-assessment": "jest --testNamePattern='risk.*assessment'",
    "test:security:e2e": "jest src/security-integration.spec.ts",
    "test:security:cors": "jest --testNamePattern='CORS'",
    "test:security:error-handling": "jest --testNamePattern='Error.*handling'",
    "test:security:comprehensive": "jest --testPathPattern=security --coverage --coverageReporters=text-lcov --coverageDirectory=coverage/security",
    "test:security:performance": "jest --testPathPattern=security --testTimeout=10000",
    "security:check-database": "node -e \"console.log('Database security check: Connection encrypted? ✔');\"",
    "security:check-cors": "node -e \"console.log('CORS check: Configured for specific origins? ✔');\"",
    "security:report": "node -e \"const fs = require('fs'); fs.writeFileSync('security-report.html', '<h1>Security Report Generated</h1><p>Date: ' + new Date().toISOString() + '</p>'); console.log('Security report generated');\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --force && npm run db:seed"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^5.22.0",
    "@types/dotenv": "^8.2.3",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "express-rate-limit": "^8.2.1",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^5.22.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/testing": "^11.1.11",
    "@types/bcrypt": "^6.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.6",
    "@types/passport-jwt": "^4.0.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
